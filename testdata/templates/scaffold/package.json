{
  "name": "{{.projectName}}",
  "description": "{{.projectDesc}}",
  "main": "web/src/main.ts",
  "scripts": {
    "build": "NODE_ENV=production npx webpack --mode=production --progress",
    "format": "npx prettier --write '**/*.{css,mjs,js,json,less,md,pug,sass,scss,svelte,ts,tsx,yml,yaml}'",
    "start": "NODE_ENV=development npx webpack-dev-server --mode=development",
    "test": "npx jest web/src",
    "test:e2e": "npx nightwatch --env chrome,firefox"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "page": "^1.11.5",
    "popper.js": "^1.16.1",
    "register-service-worker": "^1.7.1",
    "svelte": "^3.20.1",
    "svelte-i18n": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@intervolga/optimize-cssnano-plugin": "^1.0.6",
    "@prettier/plugin-pug": "^1.1.10",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/svelte": "^3.0.0",
    "@types/i18n-js": "^3.0.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "autoprefixer": "^9.7.4",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "chromedriver": "^80.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "css-loader": "^3.4.2",
    "favicons-webpack-plugin": "^3.0.1",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "geckodriver": "^1.18.0",
    "html-webpack-plugin": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^10.0.8",
    "mini-css-extract-plugin": "^0.9.0",
    "nightwatch": "^1.3.4",
    "node-sass": "^4.13.1",
    "postcss": "^7.0.27",
    "postcss-load-config": "^2.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.1",
    "prettier-plugin-svelte": "^0.7.0",
    "pug": "^2.0.4",
    "sass": "^1.26.3",
    "style-loader": "^1.1.3",
    "svelte-jester": "^1.0.5",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.5.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.0",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-manifest-plugin": "^2.2.0",
    "workbox-webpack-plugin": "^5.1.1"
  },
  "babel": {
    "compact": false,
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "tmp/coverage/web",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ]
    },
    "moduleFileExtensions": [
      "mjs",
      "js",
      "jsx",
      "json",
      "svelte",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^@assets/(.*)$": "<rootDir>/assets/$1",
      "^@/(.*)$": "<rootDir>/web/src/$1"
    },
    "setupFiles": [
      "<rootDir>/web/tests/setup.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "lint-staged": {
    "**/*.{css,mjs,js,json,less,md,pug,sass,scss,svelte,ts,tsx,yml,yaml}": "npx prettier --write",
    "**/*.go": "make format"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "cursorOffset": -1,
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "pwa": {
    "appleStatusBarStyle": "black-translucent",
    "background": "#ffffff",
    "developerName": "",
    "developerURL": "",
    "display": "standalone",
    "dir": "auto",
    "lang": "en-US",
    "orientation": "any",
    "scope": "/",
    "start_url": "./index.html",
    "theme_color": ""
  }
}
