{
  "name": "wewatch",
  "description": "A demo web app to watch movies/TVs using appy framework.",
  "version": "1.0.0",
  "repository": "github:appist/appy",
  "scripts": {
    "build": "NODE_ENV=production webpack --mode=production --progress",
    "prettier": "prettier --write '**/*.svelte'",
    "start": "NODE_ENV=development webpack-dev-server --mode=development",
    "test:unit": "jest web/tests/unit",
    "test:e2e": "nightwatch --env chrome,firefox",
    "storybook": "start-storybook -p 6006 -c ./web/.storybook",
    "build-storybook": "build-storybook -c ./web/.storybook"
  },
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0",
    "register-service-worker": "^1.6.2"
  },
  "devDependencies": {
    "@appist/appy": "git+https://github.com/appist/appy.git#master",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@intervolga/optimize-cssnano-plugin": "^1.0.6",
    "@storybook/addon-actions": "^5.2.3",
    "@storybook/addon-links": "^5.2.3",
    "@storybook/addons": "^5.2.3",
    "@storybook/svelte": "^5.2.3",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/svelte": "^1.9.0",
    "autoprefixer": "^9.6.4",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "chromedriver": "^77.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "favicons-webpack-plugin": "^1.0.2",
    "file-loader": "^4.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "geckodriver": "^1.18.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.8",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^24.9.0",
    "jest-transform-stub": "^2.0.0",
    "jest-transform-svelte": "^2.1.0",
    "lint-staged": "^9.4.2",
    "mini-css-extract-plugin": "^0.8.0",
    "nightwatch": "^1.2.4",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.18",
    "postcss-load-config": "^2.1.0",
    "postcss-loader": "^3.0.0",
    "preload-webpack-plugin": "^3.0.0-beta.3",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "pug": "^2.0.4",
    "svelte": "^3.12.1",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.1.2",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect"
  ],
  "lint-staged": {
    "**/*.go": [
      "golint -set_exit_status",
      "git add"
    ],
    "**/*.{css,scss,gql,graphql,js,jsx,json,svelte,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "**/*.svelte",
        "options": {
          "parser": "vue"
        }
      }
    ]
  },
  "pwa": {
    "appName": "WeWatch",
    "appDescription": "A demo web app to watch movies/TVs using appy framework.",
    "appShortName": "WeWatch",
    "appleStatusBarStyle": "black-translucent",
    "background": "#ffffff",
    "developerName": "Appist",
    "developerURL": "https://appist.io",
    "display": "standalone",
    "dir": "auto",
    "lang": "en-US",
    "orientation": "any",
    "scope": "/",
    "start_url": "./index.html",
    "theme_color": "#000000"
  }
}
