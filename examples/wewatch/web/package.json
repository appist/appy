{
  "name": "wewatch",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production npx webpack --mode=production --progress",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:stylelint",
    "lint:prettier": "npx prettier --write '**/*.{svelte,svt}'",
    "lint:eslint": "npx eslint --fix src",
    "lint:stylelint": "npx stylelint '**/*.{css,html,js,md,mjs,svelte,svt,svg,ts}' --fix",
    "serve": "npx webpack-dev-server",
    "test:unit": "",
    "test:e2e": ""
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "plugins": [
      "svelte3"
    ],
    "overrides": [
      {
        "files": [
          "**/*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ]
  },
  "eslintIgnore": [
    "src/assets"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-svelte"
    ]
  },
  "pwa": {
    "appName": "WeWatch",
    "appDescription": "A demo web app to watch movies/TVs using appy framework.",
    "appShortName": "WeWatch",
    "appleStatusBarStyle": "black-translucent",
    "background": "#ffffff",
    "developerName": "Appist",
    "developerURL": "https://appist.io",
    "display": "standalone",
    "dir": "auto",
    "lang": "en-US",
    "orientation": "any",
    "scope": "/",
    "start_url": "./index.html",
    "theme_color": "#000000"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-css-modules"
    ]
  }
}
